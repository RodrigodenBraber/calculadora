<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">
    <!-- box solución -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/solucion"
            android:layout_width="351dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:text="0"
            android:gravity="right"
            android:textSize="34sp" />
    </LinearLayout>
    <!-- primer contenedor números -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/num_siete"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="24sp" />
        <Button
            android:id="@+id/num_ocho"
            android:background="#EA7D3B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="8"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_nueve"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="9"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_producto"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="*"
            android:textSize="24sp"/>

    </LinearLayout>
    <!-- segundo contenedor números -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/num_cuatro"
            android:background="#EA7D3B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="4"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_cinco"
            android:background="#EA7D3B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="5"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_seis"
            android:background="#EA7D3B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="6"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_divisor"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="/"
            android:textSize="24sp"/>

    </LinearLayout>
    <!-- tercer contenedor números -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/num_uno"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="1"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_dos"
            android:background="#EA7D3B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="2"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_tres"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="3"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_resta"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="-"
            android:textSize="24sp"/>
    </LinearLayout>
    <!-- cuarto contenedor números -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/num_borrar"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="CE"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_cero"
            android:background="#EA7D3B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_igual"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="="
            android:textSize="24sp"/>
        <Button
            android:id="@+id/num_suma"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="+"
            android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>